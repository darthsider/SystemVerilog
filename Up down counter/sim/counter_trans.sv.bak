class counter_trans;
  
  rand bit load;
  rand bit [3:0] data_in;
  rand bit up_down;
  bit [3:0] data_out;
  
  function void display("string name");
    $display("----------------------------------------------");
    $display("\t load = %0b, \t data_in = %0b, \t up_down = %0b, \t data_out = %0b",load,data_in,up_down,data_out);
    $display("----------------------------------------------");
  endfunction
  
endclass
